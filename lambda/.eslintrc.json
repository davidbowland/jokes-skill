{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "script"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "no-explicit-any": ["off"],
    "no-unused-vars": ["error", { "varsIgnorePattern": "_" }],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "semi": ["error", "never"]
  },
  "globals": {
    "exports": "readonly",
    "process": "readonly",
    "module": "readonly"
  }
}
